{
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**/*",
            "use": "@vercel/static",
            "config": {
                "outputDirectory": "frontend"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        },
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        }
    ]
}