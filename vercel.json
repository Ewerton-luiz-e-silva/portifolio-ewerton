{
    "version": 2,
    "builds": [
        {
            "src": "backend/package.json",
            "use": "@vercel/server.js"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "frontend/dist" }
        }
    ],
    "routes": [
        {
            "src": "/submit",
            "dest": "backend/server.js"
        },
        {
            "src": "/api/(.)",
            "dest": "backend/server.js"
        },
        {
            "src": "(.)",
            "dest": "frontend/dist/index.html"
        }
    ]
}