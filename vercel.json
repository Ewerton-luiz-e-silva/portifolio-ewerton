{
    "version": 2,
    "builds": [
        {
            "src": "backend/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist" }
        }
    ],
    "routes": [
        {
            "src": "/submit",
            "dest": "backend/server.js"
        },
        {
            "src": "(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "(.)",
            "dest": "dist/index.html"
        }
    ],
    "devCommand": "concurrently \"cd backend && npm run dev\" \"npm run dev\""
}
